{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MissionMessage",
  "type": "object",
  "properties": {
    "actionType": {
      "type": "string",
      "enum": [
        "CREATE",
        "UPDATE",
        "DELETE"
      ]
    },
    "payload": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "imageUrl": {
              "type": "string"
            },
            "uniqueIdentifierNan": {
              "type": "string"
            },
            "uniqueIdentifierGtin": {
              "type": "string"
            },
            "created": {
              "type": "string"
            },
            "updated": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "title",
            "description",
            "imageUrl",
            "uniqueIdentifierNan",
            "uniqueIdentifierGtin",
            "created",
            "updated"
          ]
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "required": [
    "actionType"
  ]
}